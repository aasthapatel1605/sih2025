    <script>
        function showQuiz(category) {
            document.getElementById('learning-container').style.display = 'none';
            document.getElementById(`quiz-${category}`).style.display = 'block';
            const quizCards = document.querySelectorAll(`#quiz-${category} .quiz-card`);
            quizCards.forEach((card, index) => {
                setTimeout(() => {
                    card.classList.add('show');
                }, index * 100);
            });
        }

        function goBack() {
            document.querySelectorAll('.quiz-container').forEach(container => {
                container.style.display = 'none';
            });
            document.getElementById('learning-container').style.display = 'block';
        }

        function goHome() {
            alert('Navigating to Home (placeholder action)');
            // Add logic here for navigating to a home page if needed
        }

        function selectOption(element) {
            const card = element.closest('.quiz-card');
            card.querySelectorAll('.option').forEach(opt => opt.classList.remove('selected'));
            element.classList.add('selected');
        }

        function submitAnswer(button) {
            const card = button.closest('.quiz-card');
            const selected = card.querySelector('.option.selected');
            const questionText = card.querySelector('.question-text').textContent;

            // Correct answers for all quizzes
            const correctAnswers = {
                // Organic Farming
                'Q1. ‡§ú‡•à‡§µ‡§ø‡§ï ‡§ñ‡•á‡§§‡•Ä ‡§Æ‡•á‡§Ç ‡§ï‡•Ä‡§ü‡§®‡§æ‡§∂‡§ï‡•ã‡§Ç ‡§ï‡§æ ‡§â‡§™‡§Ø‡•ã‡§ó ‡§ï‡•à‡§∏‡§æ ‡§π‡•à?': '‡§ï‡§Æ',
                'Q2. ‡§ú‡•à‡§µ‡§ø‡§ï ‡§ñ‡•á‡§§‡•Ä ‡§™‡§∞‡•ç‡§Ø‡§æ‡§µ‡§∞‡§£ ‡§ï‡•á ‡§Ö‡§®‡•Å‡§ï‡•Ç‡§≤ ‡§ï‡•ç‡§Ø‡•ã‡§Ç ‡§π‡•à?': '‡§∏‡§≠‡•Ä',
                'Q3. ‡§è‡§®‡§™‡•Ä‡§ì‡§™‡•Ä ‡§ï‡•ç‡§Ø‡§æ ‡§π‡•à?': '‡§∏‡§≠‡•Ä',
                'Q4. 2021 ‡§Æ‡•á‡§Ç ‡§∏‡§¨‡§∏‡•á ‡§¨‡§°‡§º‡§æ ‡§ú‡•à‡§µ‡§ø‡§ï ‡§â‡§§‡•ç‡§™‡§æ‡§¶‡§ï ‡§¶‡•á‡§∂ ‡§ï‡•å‡§® ‡§∏‡§æ ‡§•‡§æ?': '‡§ë‡§∏‡•ç‡§ü‡•ç‡§∞‡•á‡§≤‡§ø‡§Ø‡§æ',
                'Q5. ‡§¨‡§æ‡§Ø‡•ã‡§°‡§æ‡§Ø‡§®‡§æ‡§Æ‡§ø‡§ï ‡§ï‡•É‡§∑‡§ø ‡§ï‡•ç‡§Ø‡§æ ‡§π‡•à?': '‡§∏‡§≠‡•Ä',
                // Monsoon Farming
                'Q1. ‡§Æ‡§æ‡§®‡§∏‡•Ç‡§® ‡§ñ‡•á‡§§‡•Ä ‡§Æ‡•á‡§Ç ‡§Æ‡•Å‡§ñ‡•ç‡§Ø ‡§´‡§∏‡§≤ ‡§ï‡•ç‡§Ø‡§æ ‡§π‡•à?': '‡§ß‡§æ‡§®',
                'Q2. ‡§Æ‡§æ‡§®‡§∏‡•Ç‡§® ‡§ï‡•á ‡§¶‡•å‡§∞‡§æ‡§® ‡§Æ‡§ø‡§ü‡•ç‡§ü‡•Ä ‡§ï‡•Ä ‡§â‡§∞‡•ç‡§µ‡§∞‡§§‡§æ ‡§ï‡•à‡§∏‡•á ‡§¨‡§¢‡§º‡§æ‡§à ‡§ú‡§æ‡§§‡•Ä ‡§π‡•à?': '‡§ú‡•à‡§µ‡§ø‡§ï ‡§ñ‡§æ‡§¶ ‡§ï‡§æ ‡§â‡§™‡§Ø‡•ã‡§ó',
                'Q3. ‡§Æ‡§æ‡§®‡§∏‡•Ç‡§® ‡§ñ‡•á‡§§‡•Ä ‡§Æ‡•á‡§Ç ‡§ú‡§≤ ‡§™‡•ç‡§∞‡§¨‡§Ç‡§ß‡§® ‡§ï‡§æ ‡§Æ‡§π‡§§‡•ç‡§µ ‡§ï‡•ç‡§Ø‡§æ ‡§π‡•à?': '‡§∏‡§≠‡•Ä',
                // Pest Control
                'Q1. ‡§™‡•ç‡§∞‡§æ‡§ï‡•É‡§§‡§ø‡§ï ‡§ï‡•Ä‡§ü ‡§®‡§ø‡§Ø‡§Ç‡§§‡•ç‡§∞‡§£ ‡§ï‡§æ ‡§è‡§ï ‡§§‡§∞‡•Ä‡§ï‡§æ ‡§ï‡•ç‡§Ø‡§æ ‡§π‡•à?': '‡§≤‡•á‡§°‡•Ä ‡§¨‡§∞‡•ç‡§° ‡§¨‡•Ä‡§ü‡§≤',
                'Q2. ‡§´‡•á‡§∞‡•ã‡§Æ‡•ã‡§® ‡§ú‡§æ‡§≤ ‡§ï‡§æ ‡§â‡§™‡§Ø‡•ã‡§ó ‡§ï‡§ø‡§∏ ‡§≤‡§ø‡§è ‡§π‡•ã‡§§‡§æ ‡§π‡•à?': '‡§ï‡•Ä‡§ü‡•ã‡§Ç ‡§ï‡•ã ‡§Ü‡§ï‡§∞‡•ç‡§∑‡§ø‡§§ ‡§ï‡§∞‡§®‡§æ',
                'Q3. ‡§è‡§ï‡•Ä‡§ï‡•É‡§§ ‡§ï‡•Ä‡§ü ‡§™‡•ç‡§∞‡§¨‡§Ç‡§ß‡§® (IPM) ‡§ï‡•ç‡§Ø‡§æ ‡§π‡•à?': '‡§ú‡•à‡§µ‡§ø‡§ï ‡§î‡§∞ ‡§∞‡§æ‡§∏‡§æ‡§Ø‡§®‡§ø‡§ï ‡§§‡§∞‡•Ä‡§ï‡•ã‡§Ç ‡§ï‡§æ ‡§∏‡§Ç‡§Ø‡•ã‡§ú‡§®',
                // Crop Rotation
                'Q1. ‡§´‡§∏‡§≤ ‡§ö‡§ï‡•ç‡§∞ ‡§ï‡§æ ‡§Æ‡•Å‡§ñ‡•ç‡§Ø ‡§â‡§¶‡•ç‡§¶‡•á‡§∂‡•ç‡§Ø ‡§ï‡•ç‡§Ø‡§æ ‡§π‡•à?': '‡§Æ‡§ø‡§ü‡•ç‡§ü‡•Ä ‡§ï‡•Ä ‡§â‡§∞‡•ç‡§µ‡§∞‡§§‡§æ ‡§¨‡§®‡§æ‡§è ‡§∞‡§ñ‡§®‡§æ',
                'Q2. ‡§´‡§∏‡§≤ ‡§ö‡§ï‡•ç‡§∞ ‡§Æ‡•á‡§Ç ‡§ï‡§ø‡§® ‡§´‡§∏‡§≤‡•ã‡§Ç ‡§ï‡•ã ‡§∂‡§æ‡§Æ‡§ø‡§≤ ‡§ï‡§ø‡§Ø‡§æ ‡§ú‡§æ‡§§‡§æ ‡§π‡•à?': '‡§¶‡§≤‡§π‡§® ‡§î‡§∞ ‡§§‡§ø‡§≤‡§π‡§®',
                'Q3. ‡§´‡§∏‡§≤ ‡§ö‡§ï‡•ç‡§∞ ‡§∏‡•á ‡§ï‡•Ä‡§ü ‡§®‡§ø‡§Ø‡§Ç‡§§‡•ç‡§∞‡§£ ‡§ï‡•à‡§∏‡•á ‡§π‡•ã‡§§‡§æ ‡§π‡•à?': '‡§ï‡•Ä‡§ü‡•ã‡§Ç ‡§ï‡§æ ‡§ú‡•Ä‡§µ‡§® ‡§ö‡§ï‡•ç‡§∞ ‡§§‡•ã‡§°‡§º‡§®‡§æ',
                // Water Conservation
                'Q1. ‡§°‡•ç‡§∞‡§ø‡§™ ‡§∏‡§ø‡§Ç‡§ö‡§æ‡§à ‡§ï‡§æ ‡§Æ‡•Å‡§ñ‡•ç‡§Ø ‡§≤‡§æ‡§≠ ‡§ï‡•ç‡§Ø‡§æ ‡§π‡•à?': '‡§™‡§æ‡§®‡•Ä ‡§ï‡•Ä ‡§¨‡§ö‡§§',
                'Q2. ‡§µ‡§∞‡•ç‡§∑‡§æ ‡§ú‡§≤ ‡§∏‡§Ç‡§ö‡§Ø‡§® ‡§ï‡§æ ‡§â‡§™‡§Ø‡•ã‡§ó ‡§ï‡§ø‡§∏ ‡§≤‡§ø‡§è ‡§π‡•ã‡§§‡§æ ‡§π‡•à?': '‡§∏‡§≠‡•Ä',
                'Q3. ‡§Æ‡§≤‡•ç‡§ö‡§ø‡§Ç‡§ó ‡§∏‡•á ‡§ú‡§≤ ‡§∏‡§Ç‡§∞‡§ï‡•ç‡§∑‡§£ ‡§ï‡•à‡§∏‡•á ‡§π‡•ã‡§§‡§æ ‡§π‡•à?': '‡§µ‡§æ‡§∑‡•ç‡§™‡•Ä‡§ï‡§∞‡§£ ‡§ï‡§Æ ‡§ï‡§∞‡§®‡§æ',
                // Solar Energy
                'Q1. ‡§∏‡•å‡§∞ ‡§ä‡§∞‡•ç‡§ú‡§æ ‡§ï‡§æ ‡§ï‡•É‡§∑‡§ø ‡§Æ‡•á‡§Ç ‡§â‡§™‡§Ø‡•ã‡§ó ‡§ï‡•ç‡§Ø‡§æ ‡§π‡•à?': '‡§∏‡§ø‡§Ç‡§ö‡§æ‡§à ‡§™‡§Ç‡§™ ‡§ö‡§≤‡§æ‡§®‡§æ',
                'Q2. ‡§∏‡•å‡§∞ ‡§™‡•à‡§®‡§≤ ‡§ï‡§æ ‡§Æ‡•Å‡§ñ‡•ç‡§Ø ‡§≤‡§æ‡§≠ ‡§ï‡•ç‡§Ø‡§æ ‡§π‡•à?': '‡§∏‡§≠‡•Ä',
                'Q3. ‡§∏‡•å‡§∞ ‡§ä‡§∞‡•ç‡§ú‡§æ ‡§∏‡•á ‡§ö‡§≤‡§®‡•á ‡§µ‡§æ‡§≤‡§æ ‡§â‡§™‡§ï‡§∞‡§£ ‡§ï‡•å‡§® ‡§∏‡§æ ‡§π‡•à?': '‡§∏‡•å‡§∞ ‡§°‡•ç‡§∞‡§æ‡§Ø‡§∞',
                // Tree Plantation
                'Q1. ‡§µ‡•É‡§ï‡•ç‡§∑‡§æ‡§∞‡•ã‡§™‡§£ ‡§ï‡§æ ‡§™‡§∞‡•ç‡§Ø‡§æ‡§µ‡§∞‡§£‡•Ä‡§Ø ‡§≤‡§æ‡§≠ ‡§ï‡•ç‡§Ø‡§æ ‡§π‡•à?': '‡§∏‡§≠‡•Ä',
                'Q2. ‡§µ‡•É‡§ï‡•ç‡§∑‡§æ‡§∞‡•ã‡§™‡§£ ‡§∏‡•á ‡§Æ‡§ø‡§ü‡•ç‡§ü‡•Ä ‡§ï‡•Ä ‡§â‡§∞‡•ç‡§µ‡§∞‡§§‡§æ ‡§ï‡•à‡§∏‡•á ‡§¨‡§¢‡§º‡§§‡•Ä ‡§π‡•à?': '‡§∏‡§≠‡•Ä',
                'Q3. ‡§µ‡•É‡§ï‡•ç‡§∑‡§æ‡§∞‡•ã‡§™‡§£ ‡§ï‡§æ ‡§∏‡§æ‡§Æ‡§æ‡§ú‡§ø‡§ï ‡§≤‡§æ‡§≠ ‡§ï‡•ç‡§Ø‡§æ ‡§π‡•à?': '‡§∏‡§≠‡•Ä'
            };

            if (selected) {
                const isCorrect = selected.textContent === correctAnswers[questionText];
                alert(isCorrect ? 'Correct! +50 points' : 'Incorrect. Try again!');
                if (isCorrect) {
                    // Update points in the corresponding learning card
                    const category = button.closest('.quiz-container').id.replace('quiz-', '');
                    const card = Array.from(document.querySelectorAll('.learning-card')).find(c => c.onclick.toString().includes(category));
                    if (card) {
                        const pointsBadge = card.querySelector('.points-badge');
                        if (pointsBadge) {
                            const currentPoints = parseInt(pointsBadge.textContent.match(/\d+/)[0]);
                            pointsBadge.textContent = `+${currentPoints + 50} pts`;
                        }
                    }
                }
            } else {
                alert('Please select an option!');
            }
        }
    </script>
</body>
</html>
